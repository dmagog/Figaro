# =============================================================================
# Figaro Festival - Переменные окружения
# =============================================================================
# Скопируйте этот файл в .env и настройте значения для вашего окружения

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================
DATABASE_URL=postgresql://user:password@db:5432/figaro
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=figaro
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# JWT АУТЕНТИФИКАЦИЯ
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# TELEGRAM BOT
# =============================================================================
TELEGRAM_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_BOT_USERNAME=figaro_festival_bot

# =============================================================================
# RABBITMQ (CELERY)
# =============================================================================
RABBITMQ_USER=user
RABBITMQ_PASS=password
CELERY_BROKER_URL=amqp://user:password@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# =============================================================================
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]

# =============================================================================
# SSL/HTTPS (для продакшена)
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/figaro.crt
SSL_KEY_PATH=/etc/ssl/private/figaro.key
USE_HTTPS=False

# =============================================================================
# МОНИТОРИНГ И ЛОГИРОВАНИЕ
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
LOG_FILE_PATH=/var/log/figaro/app.log
MAX_LOG_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# РЕКОМЕНДАТЕЛЬНАЯ СИСТЕМА
# =============================================================================
RECOMMENDATION_CACHE_TTL=3600
MAX_RECOMMENDATIONS_PER_USER=20
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# EMAIL (опционально)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@figaro-festival.com

# =============================================================================
# ВНЕШНИЕ API (опционально)
# =============================================================================
WEATHER_API_KEY=your-weather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# РАЗРАБОТКА И ТЕСТИРОВАНИЕ
# =============================================================================
TESTING=False
TEST_DATABASE_URL=postgresql://test_user:test_password@test_db:5432/test_figaro
COVERAGE_REPORT_PATH=./coverage_report 